<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SQL Query Executor</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 20px;
    }
    .result {
      margin-top: 20px;
      border: 1px solid #ddd;
      padding: 15px;
      background-color: #f9f9f9;
    }
    pre {
      background-color: #eee;
      padding: 10px;
    }
  </style>
</head>
<body>

  <div class="container">
    <h1 class="text-center">SQL Query Executor</h1>
    <form action="/query" method="POST">
      <div class="mb-3">
        <label for="sqlQuery" class="form-label">Enter SQL Query</label>
        <textarea class="form-control" id="sqlQuery" name="sqlQuery" rows="4" placeholder="Enter your SQL query here..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Execute Query</button>
    </form>

    <% if (error) { %>
      <div class="alert alert-danger mt-3">
        <strong>Error!</strong> <%= error %>
      </div>
    <% } %>

    <% if (result) { %>
      <div class="result mt-3">
        <h5>Query Result:</h5>
        <pre><%= JSON.stringify(result, null, 2) %></pre>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
